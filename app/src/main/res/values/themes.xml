<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NiceMovie" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_base</item>
        <item name="colorPrimaryVariant">@color/primary_dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/primary_base</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_base</item>
        <item name="colorSecondaryVariant">@color/secondary_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowActivityTransitions">true</item>
        <!-- Customize your theme here. -->
    </style>
</resources>